@font-face
  font-family CtCambridge
  src url("CtCambridge.ttf")
  
body
  margin-top 50px
  
theGoodFont()
  font-family CtCambridge
  font-size 50px
  color #ffffff

twoPixelBoundary()
  margin 2px
  padding 2px
  
#AllText
  margin 0px
  padding 0px
  theGoodFont()

#entries
  list-style-type none

#entryZE
  twoPixelBoundary()
  theGoodFont()
  background rgba(192, 192, 192, 0.25)
  
#entryON
  twoPixelBoundary()
  theGoodFont()
  
.buttonsBar
  background rgba(45, 112, 254, 0.75)
  width 100%
  height 50px
  display block
  position fixed
  top 0
  left 0
  
.button
  float left
  margin 10px
  padding 5px
  theGoodFont()
  background #3000d0
  border none